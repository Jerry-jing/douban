<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/nav_head"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/book_image"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/book_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分："
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/book_title"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_title"
                android:layout_toRightOf="@+id/book_score"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/book_infomation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息："
                android:layout_below="@+id/book_score"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_infomation"
                android:layout_below="@id/score"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/book_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:layout_below="@+id/book_infomation"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_time"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/information"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>